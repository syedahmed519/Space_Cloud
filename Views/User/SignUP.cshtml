@{
    ViewBag.Title = "SignUP";
}
<style>
label{
    color:red;
  }
</style>

<body style="background-color:seashell">
    <div style="position:absolute;z-index:1">
        <img src="~/images/s3.jpg" />
    </div>
    <div class="container" style="position:absolute;z-index:3">
                                                                 <div class="row">
                <div class=" col-xs-6 col-md-4"></div>
                <div class=" col-xs-6 col-md-4"></div>
                <div class=" col-xs-6 col-md-4">
                    <h3 style=" color:cadetblue;">Create an A-ID</h3>
                </div>
                <div class=" col-xs-6 col-md-4"></div>

            </div>

            <form method="post" action="/User/Save">

                <div class=" row" style="margin-top:30px">
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4">
                        <div class="form-group">
                            <label>First Name *</label>
                            <input type="text" class="form-control" name="Fname" id="Fname" required="required"placeholder="First Name">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4">
                        <div class="form-group">
                            <label>Last Name *</label>
                            <input type="text" class="form-control" id="Lname" name="Lname" required="required" placeholder="Last Name">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4">
                        <div class="form-group">
                            <label>Email *</label>
                            <input type="email" class="form-control" id="Email" name="Em" required="required"placeholder="Email">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4">
                        <div class="form-group">
                            <label>Password *</label>
                            <input type="password" class="form-control" name="Pass" id="Password" required="required"placeholder="Password">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4">
                        <div class="form-group">
                            <label>Confirm Password *</label>
                            <input type="password" class="form-control" id="Re-Password" name="ConPass" required="required"placeholder="Re-Enter Password">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4"></div>
                    <div class=" col-xs-6 col-md-4">
                        <div class="checkbox">

                            <button class="btn btn-default" style="background-color:lawngreen; margin-left:90px; font-size:larger;width:200px;color:blueviolet" type="submit">Sign Up</button>
                        </div>

                    </div>
                </div>

            </form>


        </div>
</body>