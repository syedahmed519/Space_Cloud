@{
    ViewBag.Title = "MainCloud";
}

<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<body style="background-color:aqua">
    <style>
        ul, li {
            list-style: none;
            margin-top: 5px;
        }
    </style>



    <nav class="navbar navbar-default">

        <div class=" col-xs-6 col-md-3">
            <h3><span class="glyphicon glyphicon-cloud"></span>&nbsp;&nbsp;&nbsp;Cloud</h3>


        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="font-weight:500" role="button">My Cloud <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">New Folder...</a></li>
                        <li class="divider"></li>
                        <li><a href="#"><span class="glyphicon glyphicon-cloud-upload"></span>&nbsp;Upload Files...<input type="file" /></a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-cloud-upload"></span>&nbsp;Upload Folder...<input type="file" /></a></li>


                    </ul>
                </li>
            </ul>

            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control " style="width:500px" placeholder="Search Cloud">
                </div>


                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
            </form>

            <form class="navbar-form navbar-right" style="margin-left: 80px;" action="~/Home" method="post">
                <button type="submit" class="btn btn-default " style="color:blue;   background-color:whitesmoke">Sign Out</button>
            </form>


        </div>


    </nav>


    <div class="row">

        <div class=" col-xs-6 col-md-3">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button style="background:blue; color:whitesmoke" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;New Upload&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <span class="caret"></span>

            </button>

            <form style="margin-left:200px" class="dropdown-menu" role="menu" action="/MainCloud/Save" method="post" enctype="multipart/form-data">

                Upload Image: <input type="file" name="file" />
                <br />
                <input type="submit" style="margin-left:80px; width:130px" value="upload" />
            </form>
            @*<ul class="dropdown-menu" role="menu">

                    <li onclick="myfun"><a href="#">Create Folder</a></li>
                    <li class="divider"></li>
                    <li><a href="#">File Upload<input type="file" /></a></li>
                    <li><a href="#">Folder Upload<input type="file" /></a></li>
                </ul>*@




        </div>

    </div>

    <div class="row">

        <div class=" col-sm-3">

            <ul style="margin-top:5px">

                <li style="margin-top:5px"><a href="~/Maincloud"> <span class="glyphicon glyphicon-cloud  ">&nbsp;&nbsp;</span> Cloud</a></li>
                <li style="margin-top:5px"><a href="~/Maincloud/Recent"> <span class="glyphicon glyphicon-time  ">&nbsp;&nbsp;</span> Recent</a></li>
                <li style="margin-top:5px"><a href="~/MainCloud/Starred"> <span class="glyphicon glyphicon-stats  ">&nbsp;&nbsp;</span>Starred</a></li>
                <li style="margin-top:5px"><a href="~/MainCloud/Sharing"> <span class="glyphicon glyphicon-phone-alt  ">&nbsp;&nbsp;</span>Shared with me</a></li>
                <li style="margin-top:5px"><a href="~/MainCloud/Trash"><span class="glyphicon glyphicon-trash">&nbsp;&nbsp;</span> Trash</a></li>

            </ul>

        </div>
        <div class="col-sm-9 text-center">
            <div class="">
                                @foreach (var i in Model)
                {
                    <div class="col-sm-6" style="margin-left:0;">
                        <h2>
                            <iframe src="@("/Files/"+@i.Id+".txt")"></iframe>
                        </h2>
                        <p style="color:black">Name: @i.Name</p>
                        <a href="/MainCloud/Download/@i.Id">   <input class="btn btn-primary" type="button" value="Download"> </a>
                        <h4>
                            <a href="/MainCloud/DeleteFile?id=@i.Id">Delete Now</a>
                        </h4>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
